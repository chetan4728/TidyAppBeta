<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.tidyhomz.admin.tidyappbeta.View.Fragment.ProceedUserOrderFragment">
      <ScrollView
          android:layout_width="match_parent"
          android:scrollbars="none"
          android:id="@+id/mainScroll"
          android:layout_height="match_parent">

            <LinearLayout
                      android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">

                   <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="vertical"
          android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="Delivery Details"
                android:padding="10dp"
                android:background="#ddd"
                android:layout_height="wrap_content" />



            <TextView
                android:layout_width="match_parent"
                android:text="Please Select Address"
                android:textColor="#a94442"
                android:background="#f2dede"
                android:padding="10dp"
                android:id="@+id/addresswarning"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/addContainer"
                android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/paymentName"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/paymentAddress"
                android:maxLines="2"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/paymentmobile"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content" />
            </LinearLayout>



            <Button
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:text="Change Or Add Address"
                android:id="@+id/changeaddress"
                android:textSize="15sp"
                android:background="#22ace3"
                android:textAlignment="center"
                android:textColor="#fff"
                android:layout_height="40dp" /> />



      </LinearLayout>




</android.support.v7.widget.CardView>






                <android.support.v7.widget.CardView
          android:layout_width="match_parent"
          android:layout_margin="5dp"
          android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                  <TextView
                      android:layout_width="match_parent"
                      android:text="Delivery Method"
                      android:padding="10dp"
                      android:background="#ddd"
                      android:layout_height="wrap_content" />

                  <TextView
                      android:layout_width="match_parent"
                      android:id="@+id/text_shipping_method"
                      android:layout_margin="10dp"
                      android:layout_height="match_parent" />


                  <ListView
                      android:layout_width="match_parent"
                      android:layout_margin="10dp"
                      android:divider="@android:color/transparent"
                      android:dividerHeight="10dp"
                      android:id="@+id/ShippingMethodList"
                      android:layout_height="match_parent"></ListView>





            </LinearLayout>






      </android.support.v7.widget.CardView>

                  <android.support.v7.widget.CardView
                      android:layout_width="match_parent"
                      android:layout_margin="5dp"
                      android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                              <TextView
                                  android:layout_width="match_parent"
                                  android:text="Payment Method"
                                  android:padding="10dp"
                                  android:background="#ddd"
                                  android:layout_height="wrap_content" />


                              <TextView
                                  android:layout_width="match_parent"
                                  android:id="@+id/text_payment_method"
                                  android:layout_margin="10dp"
                                  android:layout_height="match_parent" />

                              <ListView
                                  android:layout_width="match_parent"
                                  android:layout_margin="10dp"
                                  android:divider="@android:color/transparent"
                                  android:dividerHeight="10dp"
                                  android:id="@+id/paymentmethod"
                                  android:layout_height="match_parent"></ListView>


                              <TextView
                                  android:layout_width="match_parent"
                                  android:id="@+id/comment"
                                  android:layout_margin="10dp"
                                  android:layout_height="match_parent" />


                              <EditText

                                  android:layout_width="match_parent"
                                  android:layout_height="80dp"
                                  android:textSize="15sp"
                                  android:paddingLeft="10dp"
                                  android:paddingTop="10dp"
                                  android:lines="5"
                                  android:id="@+id/getcomment"
                                  android:layout_margin="10dp"
                                  android:background="@drawable/black_border"
                                  android:gravity="top|left"
                                  android:inputType="textMultiLine"
                                  android:scrollHorizontally="false"
                                  />


                              <LinearLayout
                                  android:layout_width="match_parent"
                                  android:orientation="horizontal"
                                  android:layout_height="wrap_content">
                              <RadioButton
                                  android:layout_width="wrap_content"
                                  android:id="@+id/confiramtion"
                                  android:textSize="12sp"
                                  android:layout_marginLeft="10dp"
                                  android:text="I have read and agree to the"
                                  android:layout_height="wrap_content" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="Terms Conditions"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="#333"
                                    android:id="@+id/terms"
                                    android:textSize="12sp"
                                    android:layout_height="wrap_content" />

                              </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">


                              <Button
                                  android:layout_width="match_parent"
                                  android:layout_marginTop="10dp"
                                  android:text="Continue"
                                  android:id="@+id/submit_order"
                                  android:background="#22ace3"
                                  android:textAlignment="center"
                                  android:textColor="#fff"
                                  android:textSize="15sp"
                                  android:layout_height="40dp" />


                            </LinearLayout>

                        </LinearLayout>








                  </android.support.v7.widget.CardView>

            </LinearLayout>

      </ScrollView>
</FrameLayout>

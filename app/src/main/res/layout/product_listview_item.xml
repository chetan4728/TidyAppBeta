<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dicount"
        android:layout_width="60dp"
        android:layout_alignParentEnd="true"
        android:padding="5dp"
        android:textSize="11sp"
        android:elevation="2dp"
        android:visibility="gone"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:background="#5bc975"
        android:text="30%"
        android:textColor="#fff"
        android:layout_alignParentRight="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_height="120dp">




        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="100dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/product_Image"
            android:layout_height="100dp" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1">



            <TextView
                android:id="@+id/prodcutName"
                android:textSize="14dp"
                android:textColor="#333"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:layout_marginTop="5dp"
                android:numStars="5"
                android:progressTint="#D4AF37"
                android:backgroundTint="#D4AF37"
                android:secondaryProgressTint="#D4AF37"
                android:id="@+id/pop_ratingbar"
                style="?android:attr/ratingBarStyleSmall"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"

                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"
                    android:textColor="#43A047"
                    android:textSize="12sp"
                    android:id="@+id/symobi2"/>


                <TextView
                    android:id="@+id/specialprodcutPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:paddingLeft="1dp"
                    android:paddingRight="4dp"
                    android:textColor="#43A047"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:textSize="12sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#7e7f80"
                    android:textSize="12sp"
                    android:id="@+id/symobi1"/>

                <TextView
                    android:id="@+id/prodcutPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="2dp"
                    android:textColor="#7e7f80"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/discount"
                    android:textColor="#7e7f80"
                    android:textSize="12sp"
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>




        </LinearLayout>


        <ImageView
            android:layout_gravity="right"
            android:layout_width="30dp"
            android:tag="wishlist"
            android:paddingTop="13dp"
            android:paddingRight="10dp"
            android:clickable="true"
            android:background="#fff"
            android:layout_height="30dp"/>

    </LinearLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#F2F3F4" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">




    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_height="match_parent">



            <TextView
                android:layout_width="wrap_content"
                android:text="chetan chumble"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/nameUser"
                android:layout_height="wrap_content" />



        <TextView
            android:layout_width="wrap_content"
            android:text="This is good product"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/ReviewDesc"
            android:layout_height="wrap_content" />


        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:numStars="5"
            android:progressTint="#D4AF37"
            android:backgroundTint="#D4AF37"
            android:secondaryProgressTint="#D4AF37"
            android:id="@+id/pop_ratingbar_product"
            style="?android:attr/ratingBarStyleSmall"
            />





        <TextView
            android:layout_width="wrap_content"
            android:text="chetan chumble"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/date"
            android:layout_height="wrap_content" />


    </LinearLayout>




</LinearLayout>
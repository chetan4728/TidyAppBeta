<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.tidyhomz.admin.tidyappbeta.View.Fragment.PolyciesFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:text="PERSONAL IDENTIFICATION INFORMATION"
        android:padding="10dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/first"
        android:layout_margin="10dp"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="match_parent"
        android:text="HOW WE USE COLLECTED INFORMATION"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="match_parent"
        android:id="@+id/second"
        android:layout_margin="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:text="CHANGES TO THIS PRIVACY POLICY"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="match_parent"
        android:id="@+id/third"
        android:layout_margin="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:text="LINKED WEBSITES"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="match_parent"
        android:id="@+id/fourth"
        android:layout_margin="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:text="CONTACTING US"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="match_parent"
        android:id="@+id/fifth"
        android:layout_margin="10dp"
        android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>

</FrameLayout>

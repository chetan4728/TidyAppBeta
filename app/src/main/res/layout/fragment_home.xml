<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/homedata"
    android:background="#F2F3F4">

   <ScrollView
       android:layout_width="match_parent"
       android:scrollbars="none"
       android:layout_height="match_parent">

          <LinearLayout
          android:layout_width="match_parent"
          android:orientation="vertical"
          android:layout_height="wrap_content">


          <android.support.v4.view.ViewPager
                   android:id="@+id/vp_slider"
                   android:layout_marginTop="8dp"
                   android:layout_width="match_parent"
                   android:layout_marginBottom="8dp"
                   android:layout_height="160dp" />


          <android.support.v7.widget.RecyclerView
              android:id="@+id/productCatHorizontalList"
              android:layout_width="match_parent"
              android:layout_marginTop="2dp"
              android:background="#22a6e3"
              android:layout_height="wrap_content" />


          <com.tidyhomz.admin.tidyappbeta.DesignHelpers.RoundRectCornerImageView
              android:layout_width="match_parent"
              android:layout_marginTop="5dp"
              android:layout_margin="5dp"
              android:padding="5dp"
              android:background="@drawable/black_border"
              android:id="@+id/bannerTop"
              android:scaleType="fitXY"
              android:layout_height="150dp"></com.tidyhomz.admin.tidyappbeta.DesignHelpers.RoundRectCornerImageView>

          <ListView
              android:layout_width="match_parent"
              android:id="@+id/moduleLoader"
              android:divider="@null"
              android:dividerHeight="0dp"
              android:layout_height="wrap_content"></ListView>

          <LinearLayout
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:background="@drawable/radius_shape"
              android:layout_marginRight="5dp"
              android:layout_marginLeft="5dp"
              android:layout_height="350dp">

              <TextView
                  android:layout_width="match_parent"
                  android:id="@+id/DynamicGridLayoutHeader"
                  android:textSize="18sp"
                  android:gravity="center"
                  android:textStyle="bold"
                  android:textAlignment="center"
                  android:layout_gravity="center"
                  android:textColor="#37474F"
                  android:padding="10dp"
                  android:layout_height="wrap_content"
                  />

              <View
                  android:layout_width="match_parent"
                  android:background="#e5e5e5"
                  android:layout_height="1dp"></View>


              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal"
                  android:weightSum="2"
                  android:background="#fff">

                  <LinearLayout
                  android:layout_width="0dp"
                      android:layout_weight="1"
                  android:orientation="vertical"
                  android:layout_height="match_parent">

                  <com.facebook.drawee.view.SimpleDraweeView
                      android:layout_width="match_parent"
                      android:layout_height="350dp"
                      android:scaleType="centerCrop"
                      android:elevation="2dp"
                      android:layout_marginRight="2dp"
                      android:background="#fff"
                      android:tag="one"
                      android:id="@+id/static_layout_one_content_1"
                      />

              </LinearLayout>
                  <LinearLayout
                     android:layout_width="0dp"
                      android:layout_weight="1"
                     android:orientation="vertical"
                     android:layout_height="match_parent">

                     <com.facebook.drawee.view.SimpleDraweeView
                         android:layout_width="match_parent"
                         android:layout_height="175dp"
                         android:scaleType="fitXY"
                         android:elevation="2dp"
                         android:tag="two"
                         android:background="#fff"
                         android:layout_marginBottom="2dp"
                         android:id="@+id/static_layout_one_content_2"

                         />
                     <com.facebook.drawee.view.SimpleDraweeView
                         android:layout_width="match_parent"

                         android:layout_height="175dp"
                         android:scaleType="fitXY"
                         android:layout_marginBottom="2dp"
                         android:tag="thee"
                         android:id="@+id/static_layout_one_content_3"
                         android:background="#fff"

                         />

                 </LinearLayout>





              </LinearLayout>
          </LinearLayout>

          <com.tidyhomz.admin.tidyappbeta.DesignHelpers.RoundRectCornerImageView
              android:layout_width="match_parent"
              android:layout_marginTop="5dp"
              android:id="@+id/bannerMiddle"
              android:padding="5dp"
              android:background="@drawable/black_border"
              android:scaleType="fitXY"
              android:layout_margin="5dp"
              android:layout_height="150dp"></com.tidyhomz.admin.tidyappbeta.DesignHelpers.RoundRectCornerImageView>


          <LinearLayout
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_marginTop="8dp"
              android:background="@drawable/radius_shape"
              android:layout_marginRight="5dp"
              android:layout_marginLeft="5dp"
              android:layout_height="wrap_content">

              <TextView
                  android:layout_width="match_parent"
                  android:id="@+id/DyGridviewThreeHeading"
                  android:textSize="18sp"
                  android:gravity="center"
                  android:text="YOU MAY LIKE"
                  android:textStyle="bold"
                  android:textAlignment="center"
                  android:layout_gravity="center"
                  android:textColor="#37474F"
                  android:padding="10dp"
                  android:layout_height="wrap_content"
                  />

              <View
                  android:layout_width="match_parent"
                  android:background="#e5e5e5"
                  android:layout_height="1dp"></View>


              <com.tidyhomz.admin.tidyappbeta.Helpers.MyGridView
                  android:id="@+id/DynamicGridviewThree"
                  android:layout_width="match_parent"
                  android:background="#e5e5e5"
                  android:scrollbars="none"
                  android:paddingRight="-1dp"
                  android:horizontalSpacing="1dp"
                  android:numColumns="auto_fit"
                  android:verticalSpacing="1dp"
                  android:layout_height="wrap_content"></com.tidyhomz.admin.tidyappbeta.Helpers.MyGridView>


          </LinearLayout>


          <com.tidyhomz.admin.tidyappbeta.DesignHelpers.RoundRectCornerImageView
              android:layout_width="match_parent"
              android:layout_marginTop="5dp"
              android:id="@+id/bannerBottom"
              android:padding="5dp"
              android:background="@drawable/black_border"
              android:scaleType="fitXY"
              android:layout_margin="5dp"
              android:layout_height="150dp"></com.tidyhomz.admin.tidyappbeta.DesignHelpers.RoundRectCornerImageView>

          <LinearLayout
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_marginTop="8dp"
              android:id="@+id/RecentlyViewlayout"
              android:visibility="gone"
              android:background="@drawable/radius_shape"
              android:layout_marginRight="5dp"
              android:layout_marginLeft="5dp"
              android:layout_height="match_parent">

              <TextView
                  android:layout_width="match_parent"
                  android:id="@+id/RecentView"
                  android:textSize="18sp"
                  android:gravity="center"
                  android:text="Recently Viewed"
                  android:textStyle="bold"
                  android:textAlignment="center"
                  android:layout_gravity="center"
                  android:textColor="#37474F"
                  android:padding="10dp"
                  android:layout_height="wrap_content"
                  />

              <View
                  android:layout_width="match_parent"
                  android:background="#e5e5e5"
                  android:layout_height="1dp"></View>


              <ListView

                  android:id="@+id/recentlyViewlist"
                  android:layout_width="match_parent"
                  android:layout_marginTop="5dp"
                  android:background="#fff"
                  android:divider="@null"
                  android:dividerHeight="0dp"
                  android:layout_marginRight="5dp"
                  android:layout_marginLeft="5dp"
                  android:layout_height="match_parent"
                  android:layout_marginBottom="8dp"
                  />




          </LinearLayout>



          <LinearLayout
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_marginRight="5dp"
              android:layout_marginLeft="5dp"
              android:layout_marginTop="10dp"
              android:layout_height="wrap_content">

             <ImageView
                 android:layout_width="match_parent"
                 android:scaleType="fitXY"
                 android:background="@drawable/securepg"
                 android:layout_height="100dp" />
              <TextView
                  android:layout_width="match_parent"
                  android:text="Rate and Comment"
                  android:textAlignment="center"
                  android:textStyle="bold"
                  android:layout_marginTop="8dp"
                  android:textColor="#333"
                  android:visibility="gone"
                  android:textSize="20sp"
                  android:layout_height="wrap_content" />



          </LinearLayout>

          <View
              android:layout_width="match_parent"
              android:layout_height="10dp"></View>
      </LinearLayout>

   </ScrollView>

</FrameLayout>

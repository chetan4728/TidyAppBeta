<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:scrollbars="none"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/back"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_action_arrow_left" />

            <TextView
                android:layout_width="match_parent"
                android:text="Back"
                android:textColor="#fff"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content" />

        </LinearLayout>




        <RelativeLayout
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/iii"
            android:layout_marginTop="80dp"

            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/tidylogo"
                app:civ_border_color="@color/semiTransparentWhite"
               />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/iii"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <EditText
                android:layout_width="match_parent"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:layout_marginRight="15dp"
                android:id="@+id/LoginEmail"
                android:layout_marginLeft="15dp"
                android:textColorHint="#fff"
                android:background="@drawable/btn_login_style"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />


            <EditText
                android:layout_width="match_parent"
                android:hint="Password"
                android:inputType="textWebPassword"
                android:padding="10dp"
                android:id="@+id/LoginPassword"
                android:layout_marginRight="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/btn_login_style"
                android:textColorHint="#fff"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="match_parent"
                android:text="Login to my account"
                android:padding="15dp"
                android:textColor="#fff"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:id="@+id/LoginButton"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_login_style"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_gravity="bottom"
                android:weightSum="2"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content">

                <CheckBox
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="Remember me"
                    android:buttonTint="#ddd"
                    android:paddingLeft="-30dp"
                    android:textColor="#ddd"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Forgot your password?"
                    android:textAlignment="center"
                    android:id="@+id/resetPassword"
                    android:textColor="#ddd"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <Button
                android:layout_width="match_parent"
                android:text="Don't have an account? Sign up now!"
                android:padding="15dp"
                android:textColor="#fff"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:textAllCaps="false"
                android:id="@+id/UserSignup"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_login_style"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

    </RelativeLayout>

</ScrollView>

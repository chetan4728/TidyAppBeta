<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tidyhomz.admin.tidyappbeta.View.Fragment.ProceedBillingDetailFragment">
   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_height="wrap_content">
       <TextView
       android:layout_width="match_parent"
       android:text="Billing Details"
       android:background="#333"
       android:textColor="#fff"
       android:textAlignment="center"
       android:padding="10dp"
       android:layout_height="wrap_content" />

      <RadioGroup
          android:layout_width="match_parent"
          android:id="@+id/billingdetail"
          android:checkedButton="@+id/billingyes"
          android:layout_height="wrap_content">

         <RadioButton
             android:layout_width="match_parent"
             android:id="@+id/billingyes"
             android:padding="10dp"
             android:text="I want to use an existing address"
             android:layout_height="wrap_content" />



         <RadioButton
             android:layout_width="match_parent"
             android:id="@+id/billingyNo"
             android:padding="10dp"
             android:text="I want to use a new address"
             android:layout_height="wrap_content" />



      </RadioGroup>

   </LinearLayout>

</FrameLayout>

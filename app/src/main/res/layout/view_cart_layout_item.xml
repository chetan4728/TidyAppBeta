<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/productImage"
                    android:layout_width="100dp"
                    android:layout_margin="10dp"
                    android:layout_height="100dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="productname"
                    android:id="@+id/productname"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#333"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#7e7f80"
                        android:text="Unit Price"
                        android:layout_marginLeft="2dp"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333"
                        android:textSize="12sp"
                        android:layout_marginLeft="35dp"
                        android:id="@+id/symobi1"/>

                    <TextView
                        android:id="@+id/prodcutPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textColor="#333"
                        android:scrollHorizontally="true"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="12sp" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Total Quantity"
                        android:layout_marginLeft="2dp"
                        android:textColor="#7e7f80"
                        android:textSize="12sp"
                        android:layout_height="wrap_content" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content">

                       <TextView
                           android:layout_width="20dp"
                           android:text="-"
                           android:background="@drawable/circle_shape_gray"
                           android:id="@+id/minuscart"
                           android:textAlignment="center"
                           android:textColor="#333"
                           android:layout_height="20dp" />
                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:textColor="#333"
                            android:text="0"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:id="@+id/qunitity"/>

                        <TextView
                            android:layout_width="20dp"
                            android:text="+"
                            android:background="@drawable/circle_shape_gray"
                            android:id="@+id/addcart"
                            android:textAlignment="center"
                            android:textColor="#333"
                            android:layout_height="20dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#7e7f80"
                        android:text="Total"
                        android:layout_marginLeft="11dp"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333"
                        android:textSize="12sp"
                        android:layout_marginLeft="58dp"
                        android:id="@+id/symobi2"/>

                    <TextView
                        android:id="@+id/TotalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#333"
                        android:scrollHorizontally="true"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="12sp" />
                </LinearLayout>




            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:gravity="bottom"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:background="@drawable/black_border"
                android:textAlignment="center"
                android:text="MOVE TO WISHLIST"
                android:padding="10dp"
                android:textColor="#333"
                android:id="@+id/movetowishlist"
                android:layout_weight="1"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="0dp"
                android:text="REMOVE"
                android:textAlignment="center"
                android:background="@drawable/black_border"
                android:id="@+id/removeCartProduct"
                android:padding="10dp"
                android:textColor="#333"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>

</LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>